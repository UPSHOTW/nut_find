<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:weightSum="9">

        <LinearLayout
            android:id="@+id/mLytPhoneNum"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/about_spacing_20"
            android:layout_marginRight="@dimen/about_spacing_20"
            android:layout_weight="1.5"
            android:gravity="bottom"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/mEdtRegion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/region" />

            <EditText
                android:id="@+id/mEdtPhoneNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:hint="@string/phoneNum" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/about_spacing_20"
            android:layout_marginRight="@dimen/about_spacing_20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_action_message" />

            <EditText
                android:id="@+id/mEdtAuthCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/authcode" />

            <Button
                android:id="@+id/BtnAuthCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/button_shape_white"
                android:text="@string/getAuthCode" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/about_spacing_20"
            android:layout_marginRight="@dimen/about_spacing_20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAuthCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_password" />

            <EditText
                android:id="@+id/mEdtPwd"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:hint="@string/register_pwd" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>