<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytEquipmentDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingLeft="@dimen/about_spacing_20"
        android:paddingRight="@dimen/about_spacing_20">

        <ImageButton
            android:id="@+id/mImgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/img_actionbar_back" />

        <TextView
            android:id="@+id/mTxtEquipmentname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/remind"
            android:textSize="@dimen/title_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mRltNotifySound"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/about_spacing_20"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:paddingLeft="@dimen/about_spacing_20"
        android:paddingRight="@dimen/about_spacing_20">

        <TextView
            android:id="@+id/mTxtNotifySound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="@string/notifysound" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgSound"
            android:layout_toStartOf="@+id/imgSound"
            android:hint="@string/voice" />

        <ImageView
            android:id="@+id/imgSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_web_next" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mRltWarnTime"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:onClick="WarnTime"
        android:paddingLeft="@dimen/about_spacing_20"
        android:paddingRight="@dimen/about_spacing_20">

        <TextView
            android:id="@+id/mTxtWarnTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="@string/warntime" />

        <TextView
            android:id="@+id/mTxtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgTime"
            android:layout_toStartOf="@+id/imgTime"
            android:gravity="right"
            android:hint="@string/warntime" />

        <ImageView
            android:id="@+id/imgTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_web_next" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/about_spacing_20"
        android:layout_marginRight="@dimen/about_spacing_20"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/break_explain" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:paddingLeft="@dimen/about_spacing_20"
        android:paddingRight="@dimen/about_spacing_20">

        <TextView
            android:id="@+id/mTxtRepetition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="@string/repetition" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:button="@drawable/toggle_btn"
            android:checked="false"
            android:textOff=""
            android:textOn="" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/about_spacing_20"
        android:layout_marginRight="@dimen/about_spacing_20"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/repetition_explain" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:paddingLeft="@dimen/about_spacing_20"
        android:paddingRight="@dimen/about_spacing_20">

        <TextView
            android:id="@+id/mTxtAnew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="@string/anew" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:button="@drawable/toggle_btn"
            android:checked="false"
            android:textOff=""
            android:textOn="" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/about_spacing_20"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/anew_explain" />

</LinearLayout>