<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlt01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="4">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/black" />

    <TextView
        android:id="@+id/mTxtAlterImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/distance_five"
        android:layout_marginTop="@dimen/distance_five"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/alterImg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/black" />

    <TextView
        android:id="@+id/mTxtAlterName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/distance_five"
        android:layout_marginTop="@dimen/distance_five"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/alterName" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/black" />

    <TextView
        android:id="@+id/mTxtDelete"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/distance_five"
        android:layout_marginTop="@dimen/distance_five"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/delete" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/black" />

    <TextView
        android:id="@+id/mTxtCancel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/distance_five"
        android:layout_marginTop="@dimen/distance_five"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/red" />

</LinearLayout>