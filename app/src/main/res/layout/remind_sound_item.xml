<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/about_spacing_20"
    android:paddingRight="@dimen/about_spacing_20">

    <TextView
        android:id="@+id/select_imagebtn_ring_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/about_spacing_20"
        android:layout_marginTop="@dimen/about_spacing_20"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/select_imagebtn_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/remind_img_select" />
</RelativeLayout>